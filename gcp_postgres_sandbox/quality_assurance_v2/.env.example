# CryptoPrism-DB Quality Assurance System v2 - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
DB_HOST=your_postgresql_host
DB_USER=your_database_username  
DB_PASSWORD=your_database_password
DB_PORT=5432
DB_NAME=dbcp

# Additional Database Connections (Optional)
DB_NAME_AI=cp_ai
DB_NAME_BT=cp_backtest

# Telegram Notifications (Optional - for automated alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# AI Integration (Optional - for intelligent issue analysis)
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_google_gemini_api_key

# QA Thresholds (Optional - customize alert levels)
QA_SLOW_QUERY_THRESHOLD=1.0
QA_CRITICAL_QUERY_THRESHOLD=5.0
QA_NULL_RATIO_LOW=0.05
QA_NULL_RATIO_MEDIUM=0.20
QA_NULL_RATIO_HIGH=0.50
QA_MIN_EXPECTED_ROWS=100
QA_MIN_TIMESTAMP_RANGE_DAYS=4

# Alert Configuration (Optional)
QA_ALERT_LEVELS=HIGH,CRITICAL

# Logging (Optional)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s